# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_life = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_withespace = true

[*.md]
trim_trailing_withespace = false

[*.{yaml,yml}]
indent_size = 2

